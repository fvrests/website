---
import type { HTMLAttributes } from 'astro/types';

export interface Props extends HTMLAttributes<'a'> {
	underline?: boolean;
	title?: string;
	color?: string;
}

const { underline = false, title = '', color = 'f-high', href } = Astro.props;
let isExternal = href?.toString().startsWith('http') || null;
---

<a
	href={href}
	rel={isExternal ? 'external' : undefined}
	target={isExternal ? '_blank' : undefined}
	title={title}
	class={`italic inline-flex text-${color} ${
		underline ? 'underline hover:no-underline' : 'no-underline hover:underline'
	}`}
>
	<slot /></a
>
